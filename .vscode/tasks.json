{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "${workspaceFolder}/api/.venv/Scripts/python.exe",
      "args": ["run.py", "--debug", "--port", "5000"],
      "options": {
        "cwd": "${workspaceFolder}/api"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
