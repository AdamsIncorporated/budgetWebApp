{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug BudgetWebApp",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "run.py",
        "FLASK_ENV": "development"
      },
      "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["run", "--no-debugger", "--no-reload", "--port", "3000"],
      "jinja": true,
      "justMyCode": false
    }
  ]
}
